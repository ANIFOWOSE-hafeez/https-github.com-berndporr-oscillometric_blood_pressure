  keywords = {Accuracy; Estimation; maximum amplitude algorithm (MAA); Blood pressure; Gaussian mixture regression (GMR); Biomedical monitoring; Standards; Gaussian mixture model; oscillometric blood pressure estimation; Signal processing; Research; Regression analysis; Analysis; Estimation theory; Gaussian processes},
  year     = {2013},
